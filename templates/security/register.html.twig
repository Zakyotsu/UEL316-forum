{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="row w-25 m-auto mt-4">
        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">S'enregistrer</p>

        {{ form_start(registrationForm) }}
        <div class="form-group pb-2">
            <label>Nom d'utilisateur</label>
            {{ form_widget(registrationForm.username) }}
        </div>

        <div class="form-group pb-2">
            <label>E-Mail</label>
            {{ form_widget(registrationForm.email) }}
        </div>

        <div class="form-group pb-2">
            <label>Prénom</label>
            {{ form_widget(registrationForm.firstname) }}
        </div>

        <div class="form-group pb-2">
            <label>Nom</label>
            {{ form_widget(registrationForm.lastname) }}
        </div>

        <div class="form-group pb-2">
            <label>Rôles</label>
            {{ form_widget(registrationForm.roles) }}
        </div>

        <div class="form-group pb-2">
            <label>Mot de passe</label>
            {{ form_widget(registrationForm.password) }}
        </div>

        <div class="d-flex justify-content-center pt-2">
            <button type="submit" class="btn btn-primary btn-lg">Valider</button>
        </div>
        {{ form_rest(registrationForm) }}
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
